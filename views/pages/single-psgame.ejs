<%- include('../partials/header'); %>

<main class="main main-single container">
    <h2 class="main-h2 text-center"><%= name %></h2>


    <!-- prev and next -->

    <section class="prev-and-next d-flex justify-content-around">
        <p class="prev">
            <% if(data.id > 1) { %>
                <a href="/playStation/<%= data.id - 1 %>" class="btn btn-large">Prev</a>
            <% } %>
        </p>
        <p class="next">
            <% if(data.id <= count) { %>
                <a href="/playStation/<%= data.id + 1 %>" class="btn btn-large" >Next</a>
            <% } %>
        </p>
    </section>
    <section class="section section-single d-flex justify-content-center m-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <img src="https://tse2.mm.bing.net/th?id=OIP.vsEwcgXj7B4lMVYR9aIp8AHaEK&pid=Api&P=0&w=700&h=700" alt="Base Ball" class="img-fluid pb-5">
                    <p> Name: <%= data.name %></p>
                </div>
                <div class="col-md-6 col-sm-12">
                    <aside class="aside">
                        <h3 class="single-h3">More Info</h3>
                                <p class="list-group-item text-danger"> Publishers: <% for(let i = 0; i < data.publishers.length; i++) { %>
                                   <span class="text-dark"> <%= data.publishers[i] %> </span> 
                                <% } %>
                                </p>             

                                <p class="list-group-item text-danger"> Genre: <% for(let i = 0; i < data.genre.length; i++) { %>
                                    <span class="text-dark">
                                        <%= data.genre[i] %>
                                    </span>
                                <% } %>
                                </p>
                                
                    <p class="list-group-item text-danger"> Developers: <% for(let i = 0; i < data.developers.length; i++) { %>
                        <span class="text-dark"> <%= data.developers[i] %> </span> 
                     <% } %>
                     </p>
                    </aside>
                </div>
            </div>
        </div>        
    </section>
</main>

<%- include('../partials/footer'); %>